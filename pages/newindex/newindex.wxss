/* pages/newindex/newindex.wxss */

.first-floor {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  z-index: 2;
  background-color: #f0f3f5;
  border-radius: 0px 0px 88rpx 88rpx;
  width: 100%;
  height: 75%;
  box-shadow: 0px 1px 10px 1px rgb(71, 101, 167);
}

.cardImg {
  height: 480rpx;
  width: 380rpx;
}

.avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 30rpx;
}

.nickName{
  font-size: 40rpx;
  margin-top: 185rpx;
  color: white;
}

.scrollView {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}

.cardView {
  margin-left: 40rpx;
  display: inline-block;
}

.cardItemView {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cardItem {
  position: absolute;
  z-index: 3;
}

.card1-firstline{
  margin-top: 290rpx;
  color: #f0f3f5;
  font-size: 28rpx;
}

.card1-secondline{
  margin-top: 350rpx;
  font-size: 80rpx;
  color: #f0f3f5;
}

.buttonView {
  margin-top: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 80%;
}

.second-floor {
  position: absolute;
  z-index: 1;
  background-color: #6193cd;
  border-radius: 0px 0px 88rpx 88rpx;
  height: 88%;
  width: 100%;
  box-shadow: 0px 1px 10px 1px rgb(71, 101, 167);
}

.pocketView {
  width: 100%;
  margin-top: 940rpx;
}

.background {
  position: absolute;
  z-index: 0;
  background-color: #5087c8;
}

.bottomText{
  margin-top: 1120rpx;
  font-size: 30rpx;
}