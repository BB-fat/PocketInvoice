/* pages/manual/manual.wxss */
@import "../../templates/myButton/myButton.wxss";

.mainview {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F0F3F5;
  height: 1206rpx;
}

.line {
  width: 620rpx;
  border-radius: 44rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 27rpx;
  background-color: white;
  font-size: 32rpx;
}

.input {
  height: 93rpx;
  text-align: right;
  margin-right: 20rpx;
}

.text{
  margin-left: 40rpx;
  color: #585858b1;
}

.buttons{
  position: absolute;
  bottom: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.button{
  border-color: #368299;
  border-width: 1rpx;
  width: 91.3%;
  margin-top: 30rpx;
  border-style:solid;
}

#picker{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 100rpx;
}